<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_utility_bill_part2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background2"
    tools:context="alex.carbon_tracker.UI.AddUtilityBillPart2">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/carbontrackerlogo5"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="@string/add_a_utility_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDateCalendar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginEnd="55dp" />

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endDateCalendar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="31dp" />

    <TextView
        android:text="Start Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:id="@+id/textView18"
        android:layout_above="@+id/endDateCalendar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="End Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:id="@+id/textView21"
        android:layout_above="@+id/endDateCalendar"
        android:layout_alignStart="@+id/endDateCalendar" />

    <Button
        android:text="Submit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/endDateCalendar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="302dp"
        android:id="@+id/submitBill"
        android:background="@drawable/button_shape" />

</RelativeLayout>
