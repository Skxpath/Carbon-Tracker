<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background2"
    tools:context="alex.carbon_tracker.UI.AddRouteActivity">

    <TextView
        android:text="@string/AddRouteHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ads"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/AddRouteCityDistance"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignTop="@+id/cityDistanceEditText"
        android:layout_above="@+id/highwayDistanceEditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/carbontrackerlogo5"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/AddRouteHighwayDistance"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/highwayDistanceEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="70dp"
        android:id="@+id/cityDistanceEditText"
        android:textSize="18sp"
        android:layout_below="@+id/ads"
        android:layout_alignParentEnd="true"
        android:text="0" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/highwayDistanceEditText"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/cityDistanceEditText"
        android:layout_alignStart="@+id/cityDistanceEditText"
        android:text="0" />


    <Button
        android:text="@string/AddRouteSubmitButton"
        android:id="@+id/submitBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="48dp"
        android:background="@drawable/button_shape"
        android:layout_width="120dp" />

    <TextView
        android:text="@string/RouteName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:id="@+id/routeNameEditText" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/submitBtn"
        android:layout_toStartOf="@+id/ads"
        android:layout_marginEnd="13dp"
        android:id="@+id/relativeLayoutButton">

    </RelativeLayout>

</RelativeLayout>
