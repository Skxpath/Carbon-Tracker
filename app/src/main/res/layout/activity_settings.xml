<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background2"
    tools:context="alex.carbon_tracker.UI.SettingsActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/settingsTitle" />

    <Button
        android:text="Kilograms"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="122dp"
        android:id="@+id/buttonChangeUnitsToKG"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_shape" />

    <TextView
        android:text="@string/settingsChangeUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonChangeUnitsToKG"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/settingsPickUnit" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChangeUnitsToTrees"
        android:layout_centerHorizontal="true"
        android:id="@+id/settingsUnitExample" />

    <Button
        android:text="Tree-Days"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/buttonChangeUnitsToTrees"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/settingsPickUnit"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
